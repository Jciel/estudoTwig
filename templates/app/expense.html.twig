{% extends '@layout/default.html.twig' %}
{% import '@form-components/inputs.html.twig' as input %}

{% use "@layout/header.html.twig" %}


{% block title %}Despesa{% endblock %}

{% block content %}
    
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Adicionar Despesa</h4>
        </div>

        <div class="card-body">
            <form method="post" action="expense">
                <div class="form-group">
                    {{ input.inputText('description', null, null, 'Descrição:', '', ['form-control']) }}
                </div>
                <div class="form-group">
                    {{ input.inputText('value', 'expense', null, 'Valor Despesa:', '', ['form-control']) }}
                </div>

                <div class="form-group">
                    {{ input.inputSelect('month', '', 'Mês:', "now"|date("m"), ['Janeiro', 'Fevereiro', 'Marco'], ['form-control']) }}
                </div>

                <button type="submit" class="btn btn-outline-warning">Salvar</button>
            </form>
        </div>
    </div>
    
{% endblock %}



